// MYSQLの履歴をここで記録する。。。


// データベースを作成
create database friends_system;


// 地域（都道府県）テーブルを作成
create table areas (
	id int not null auto_increment primary key,
	name varchar(50) not null
);


// 友達テーブルを作成
create table friends (
	id int not null auto_increment primary key,
	area_id int not null,
	name varchar(50) not null,
	age varchar(50) not null,
	gender varchar(50) not null
);


